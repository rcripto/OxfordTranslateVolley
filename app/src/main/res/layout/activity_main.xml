<LinearLayout
        android:id="@+id/mainLl"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <EditText
            android:id="@+id/originalEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite a palavra aqui"
            android:textSize="24dp"
            android:inputType="text"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Idioma original:"/>
    <Spinner
            android:id="@+id/idiomaOrigemSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Idioma destino:"/>
    <Spinner
            android:id="@+id/idiomaDestinoSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/traduzirBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Traduzir"/>
    <TextView
            android:id="@+id/traduzidoTv"
            android:layout_width="match_parent"
            android:textSize="36dp"
            android:textColor="@color/navy"
            android:layout_height="wrap_content"/>
</LinearLayout>